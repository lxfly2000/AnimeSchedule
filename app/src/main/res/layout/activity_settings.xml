<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lxfly2000.animeschedule.SettingsActivity">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/label_repository_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textRepositoryUrl"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editRepositoryUrl" android:inputType="textUri"
                    android:hint="@string/label_repository_url"/>
            <TextView
                    android:text="@string/label_repository_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textRepositoryBranch"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editRepositoryBranch" android:hint="@string/label_repository_branch"
                    android:inputType="text"/>
            <TextView
                    android:text="@string/label_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textMail"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editMail" android:inputType="textEmailAddress" android:hint="@string/label_mail"/>
            <TextView
                    android:text="@string/label_git_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textDisplayName"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editDisplayName" android:hint="@string/label_git_display_name"
                    android:inputType="text"/>
            <TextView
                    android:text="@string/label_git_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textUserName"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editUserName" android:hint="@string/label_git_user_name" android:inputType="text"/>
            <TextView
                    android:text="@string/label_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textPassword"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editPassword" android:hint="@string/label_password"
                    android:inputType="textPassword"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="@string/action_save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSaveSettings" android:layout_weight="1"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
